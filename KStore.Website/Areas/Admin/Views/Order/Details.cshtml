@model KStore.Domain.Model.Order

@{
    ViewBag.Title = "Details";
}

<h2>Details Order</h2>

<div>

    <hr />
    <h4>Order</h4>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.DeliveryAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeliveryAddress)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DeliveryLocation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeliveryLocation)
        </dd>

        <dt>@Html.DisplayNameFor(model => model.DeliveryPostcode)</dt>

        <dd>@Html.DisplayFor(model => model.DeliveryPostcode)</dd>
    </dl>
    <hr />
    <h4>Customer</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Customer.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Customer.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
    </dl>
    <hr />
</div>
<div>
    <h4>Orderlines</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines[0].Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines[0].Product.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines[0].Product.DeliveryTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines[0].Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines[0].Product.Visible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines[0].Product.PurchasePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines[0].Product.StockStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines[0].Quantity)
            </th>


        </tr>

        @foreach (var item in Model.OrderLines)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.DeliveryTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Visible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.PurchasePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.StockStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>

            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
